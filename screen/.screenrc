# Load ~/.zshrc
shell "/usr/bin/zsh"

# Change the command character to Ctrl + F
# as Ctrl + a is used as HOME key
escape ^Ff

# Detach on hangup
autodetach on

# emulate .logout message
pow_detach_msg "Screen session of \$LOGNAME \$:cr:\$:nl:ended."

# Hide the initial message
startup_message off

# Tab-completion flash in the heading bar
vbell off

# Use Alternate screen
#altscreen on

# Bug: Only one of altscreen & scroll can be used
# Easy scrolling by mouse or Shift-PgUp/PgDn
termcapinfo xterm* ti@:te@

# Cache n lines for scroll back
defscrollback 5000

################################################## Status Line

# Don't use the hardstatus line for system messages, use reverse video instead
hardstatus off
hardstatus alwayslastline

hardstatus string "%{= kK} %-Lw%{=b kR}%n%f %t%{-}%+Lw %=%{= dd} %{b kw}%H %{r}%1` %{w}| %{g}%C %{w}| %{y}%d.%m.%Y %{w}"

